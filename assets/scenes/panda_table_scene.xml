<mujoco model="panda_table_scene">
  <include file="panda_robot.xml"/>

  <option integrator="implicitfast" impratio="10"/>
  <asset>
    <texture name="tex_checker" type="2d" builtin="checker"
             width="512" height="512" rgb1="0.2 0.3 0.9" rgb2="0.9 0.9 0.9"/>
    <material name="mat_checker" texture="tex_checker" texrepeat="8 8" reflectance="0.1"/>
  </asset>

  <worldbody>
   
    <geom name="floor" type="plane" size="3 3 0.1" material="mat_checker"
          friction="1 0.005 0.0001" contype="1" conaffinity="1"/>

    <body name="table" pos="-0.5 0.0 0.3">
      <geom name="table_top" type="box" size="0.35 0.35 0.02"
            rgba="0.6 0.6 0.6 1"
            friction="1 0.005 0.0001"
            contype="1" conaffinity="1"/>
    </body>
  </worldbody>
</mujoco>
